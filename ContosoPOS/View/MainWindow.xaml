<Window x:Class="ContosoPOS.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContosoPOS.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DataGrid x:Name="StudentsDataGrid" Height="300" AutoGenerateColumns="False" HorizontalAlignment="Center" VerticalAlignment="Top">
        <DataGrid.Columns>
            <DataGridTextColumn Header="StudentID" Binding="{Binding StudentID}" Width="1.5*"/>
            <DataGridTextColumn Header="StudentName" Binding="{Binding StudentName}" Width="1.5*"/>
            <DataGridTextColumn Header="StudentEmail" Binding="{Binding StudentEmail}" Width="1.5*" />
            <DataGridTextColumn Header="StudentPhone" Binding="{Binding StudentPhone}" Width="1.5*"/>
            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="2*"/>
            <DataGridTextColumn Header="School" Binding="{Binding School}" Width="1.5*"/>
        </DataGrid.Columns>
    </DataGrid>

</Window>
